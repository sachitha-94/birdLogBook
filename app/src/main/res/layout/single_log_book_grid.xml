<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/logBookImageView"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow>
                <TextView
                    android:id="@+id/logBookTextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Date  : "/>
                <TextView
                    android:id="@+id/logBookTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/logBookTextView22"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Time  : "/>
                <TextView
                    android:id="@+id/logBookTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/logBookTextView33"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Location : "/>
                <TextView
                    android:id="@+id/logBookTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

            </TableRow>

        </TableLayout>



    </LinearLayout>



</LinearLayout>
